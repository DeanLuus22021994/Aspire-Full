# Use the base python image
FROM base-python

# Set the working directory
WORKDIR /app

# Copy the project files
COPY AI/Aspire-Full.Python/python-agents/pyproject.toml AI/Aspire-Full.Python/python-agents/uv.lock ./
COPY AI/Aspire-Full.Python/python-agents/src ./src
COPY AI/Aspire-Full.Python/python-agents/README.md ./

# Install dependencies
RUN uv sync --frozen

# Set the entrypoint
ENTRYPOINT ["uv", "run", "aspire-agents"]
