# =============================================================================
# Aspire Full DevContainer with TensorCore Compute
# Python 3.15t (free-threaded) + .NET 10 + CUDA 13.0 + cuDNN
# All dependencies baked for zero-latency development
# =============================================================================
FROM nvidia/cuda:13.0.0-cudnn-devel-ubuntu24.04
LABEL org.opencontainers.image.source="https://github.com/Dean/Aspire-Full"
LABEL org.opencontainers.image.description="Aspire Full DevContainer with TensorCore"
LABEL org.opencontainers.image.licenses="MIT"

ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# =============================================================================
# Python 3.15 Free-Threading + TensorCore + Strict Formatting Configuration
# =============================================================================
ENV PYTHON_GIL=0 \
    PYTHON_JIT=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONIOENCODING=utf-8 \
    PYTHONHASHSEED=random \
    # NVIDIA Configuration
    NVIDIA_VISIBLE_DEVICES=all \
    NVIDIA_DRIVER_CAPABILITIES=compute,utility \
    TORCH_CUDA_ARCH_LIST="7.0 7.5 8.0 8.6 8.9 9.0+PTX" \
    # Strict formatting configuration (baked into image)
    RUFF_LINE_LENGTH=120 \
    RUFF_TARGET_VERSION=py315 \
    RUFF_FORMAT_QUOTE_STYLE=double \
    RUFF_FORMAT_INDENT_STYLE=space \
    RUFF_FORMAT_LINE_ENDING=lf \
    BLACK_LINE_LENGTH=120

# Enable apt caching for faster rebuilds
RUN rm -f /etc/apt/apt.conf.d/docker-clean; echo 'Binary::apt::APT::Keep-Downloaded-Packages "true";' > /etc/apt/apt.conf.d/keep-cache

# Install prerequisites
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
        curl \
        wget \
        git \
        jq \
        unzip \
        ca-certificates \
        gnupg \
        lsb-release \
        software-properties-common \
        apt-transport-https \
        python3 \
        python3-pip \
        python3-venv \
        sudo \
        cmake \
        build-essential \
        gdb \
    && rm -rf /var/lib/apt/lists/*

# Create the user
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# Install Docker CLI
RUN install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc \
    && chmod a+r /etc/apt/keyrings/docker.asc \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/ubuntu $(. /etc/os-release && echo "$VERSION_CODENAME") stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null \
    && apt-get update \
    && apt-get -y install --no-install-recommends docker-ce-cli docker-compose-plugin docker-buildx-plugin \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN (type -p wget >/dev/null || apt-get install wget -y) \
    && mkdir -p -m 755 /etc/apt/keyrings \
    && out=$(mktemp) && wget -nv -O$out https://cli.github.com/packages/githubcli-archive-keyring.gpg \
    && cat $out | tee /etc/apt/keyrings/githubcli-archive-keyring.gpg > /dev/null \
    && chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install gh -y \
    && rm -rf /var/lib/apt/lists/*

# Install .NET 10 SDK
RUN wget https://dot.net/v1/dotnet-install.sh -O /tmp/dotnet-install.sh \
    && chmod +x /tmp/dotnet-install.sh \
    && /tmp/dotnet-install.sh --channel 10.0 --install-dir /usr/share/dotnet \
    && ln -sf /usr/share/dotnet/dotnet /usr/bin/dotnet \
    && rm /tmp/dotnet-install.sh

# Install Aspire CLI
RUN curl -sSL https://aspire.dev/install.sh | bash \
    && mv /root/.aspire /opt/aspire \
    && chmod -R 755 /opt/aspire

# Install uv (Astral's ultra-fast Python package manager)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /usr/local/bin/

# ============================================================================
# Install Python 3.15 (free-threaded) and bake ALL dependencies
# This eliminates dependency installation latency during development
# ============================================================================
# Copy dependency files from context (relative to Aspire-Full.DockerRegistry)
COPY AI/Aspire-Full.Python/python-agents/pyproject.toml /tmp/python-agents/pyproject.toml
COPY AI/Aspire-Full.Python/python-agents/uv.lock /tmp/python-agents/uv.lock

# Create dummy package structure to satisfy hatchling build
RUN touch /tmp/python-agents/README.md \
    && mkdir -p /tmp/python-agents/src/aspire_agents \
    && touch /tmp/python-agents/src/aspire_agents/__init__.py

# Install Python 3.15t (free-threaded) and create isolated virtual environment
# Using --locked ensures reproducible builds from uv.lock
RUN uv python install 3.15t \
    && cd /tmp/python-agents \
    && uv venv /opt/venv --python 3.15t \
    && . /opt/venv/bin/activate \
    && uv sync --frozen --all-extras \
    && chmod -R 755 /opt/venv

# Pre-install Playwright browsers to avoid runtime download latency
RUN . /opt/venv/bin/activate \
    && playwright install --with-deps chromium

# Pre-download HuggingFace models for instant startup (TensorCore accelerated)
RUN --mount=type=cache,target=/root/.cache/huggingface \
    . /opt/venv/bin/activate && \
    python -c "from transformers import AutoTokenizer, AutoModel; \
    model_name = 'sentence-transformers/all-MiniLM-L6-v2'; \
    AutoTokenizer.from_pretrained(model_name); \
    AutoModel.from_pretrained(model_name)"

# Precompile Python packages for instant import
RUN . /opt/venv/bin/activate && python -m compileall -q /opt/venv/lib

# Install strict formatting tools
RUN --mount=type=cache,target=/root/.cache/uv \
    . /opt/venv/bin/activate && \
    uv pip install ruff>=0.8.0 black>=24.0.0 mypy>=1.13.0 isort>=5.13.0

# Create global ruff configuration for strict formatting
RUN mkdir -p /etc/python && \
    echo '[tool.ruff]' > /etc/python/ruff.toml && \
    echo 'target-version = "py315"' >> /etc/python/ruff.toml && \
    echo 'line-length = 120' >> /etc/python/ruff.toml && \
    echo 'fix = true' >> /etc/python/ruff.toml && \
    echo '' >> /etc/python/ruff.toml && \
    echo '[tool.ruff.lint]' >> /etc/python/ruff.toml && \
    echo 'select = ["E", "W", "F", "I", "UP", "B", "C4", "SIM", "TCH", "RUF"]' >> /etc/python/ruff.toml && \
    echo 'ignore = ["E501"]' >> /etc/python/ruff.toml && \
    echo '' >> /etc/python/ruff.toml && \
    echo '[tool.ruff.format]' >> /etc/python/ruff.toml && \
    echo 'quote-style = "double"' >> /etc/python/ruff.toml && \
    echo 'indent-style = "space"' >> /etc/python/ruff.toml && \
    echo 'line-ending = "lf"' >> /etc/python/ruff.toml

# Copy maintenance scripts
COPY .devcontainer/scripts /opt/devcontainer-scripts
RUN chmod -R 755 /opt/devcontainer-scripts

# Set environment variables for .NET and Docker-in-Docker
ENV DOTNET_ROOT=/usr/share/dotnet
ENV PATH="/opt/venv/bin:${PATH}:/usr/share/dotnet:/home/${USERNAME}/.dotnet/tools:/opt/aspire/bin"
ENV VIRTUAL_ENV="/opt/venv"
ENV UV_CACHE_DIR="/home/${USERNAME}/.cache/uv"
ENV DOTNET_RUNNING_IN_CONTAINER=true
ENV DOTNET_USE_POLLING_FILE_WATCHER=true
ENV DOTNET_CLI_TELEMETRY_OPTOUT=1
ENV DOTNET_NOLOGO=1
ENV NUGET_XMLDOC_MODE=skip
# Docker-in-Docker TLS configuration
ENV DOCKER_HOST=tcp://docker:2376
ENV DOCKER_TLS_VERIFY=1
ENV DOCKER_CERT_PATH=/certs/client
# NVIDIA Configuration
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Add vscode user to docker group
RUN groupadd -f docker && usermod -aG docker ${USERNAME}

# Setup workspace directory
RUN mkdir -p /workspace && chown -R ${USERNAME}:${USERNAME} /workspace

# Switch to non-root user
USER ${USERNAME}

# Install global .NET tools
RUN dotnet tool install -g dotnet-ef \
    && dotnet tool install -g dotnet-outdated-tool

# Pre-warm NuGet cache with Aspire packages
RUN mkdir -p /tmp/warmup \
    && cd /tmp/warmup \
    && dotnet new globaljson --sdk-version 10.0.100 --force \
    && dotnet new console -n warmup \
    && cd warmup \
    && dotnet add package Aspire.Hosting.AppHost --version 13.0.1 \
    && dotnet restore \
    && cd / && rm -rf /tmp/warmup

WORKDIR /workspace
