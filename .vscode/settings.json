{
  // =============================================================================
  // Aspire-Full VS Code Settings - Fully Portable
  // No host dependencies - all paths relative to ${workspaceFolder}
  // Microsoft-Only Python Tooling: Pylance + Pyright for type checking
  // =============================================================================

  // .NET Configuration
  "dotnet.defaultSolution": "Aspire-Full.slnx",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "omnisharp.enableRoslynAnalyzers": true,

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.pylance": "explicit"
  },

  // File Exclusions
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/artifacts": true,
    "**/.git": true,
    "**/node_modules": true
  },
  "files.associations": {
    ".pycodestyle": "ini",
    "*.cu": "cuda-cpp",
    "*.cuh": "cuda-cpp"
  },

  // =============================================================================
  // Python Configuration - Microsoft Pylance (powered by Pyright)
  // =============================================================================
  // Uses Python 3.15t (free-threaded) from .python-version
  // PYTHON_GIL=0 environment disables GIL for true parallel threading (PEP 703/803)
  // Windows: .venv/Scripts/python.exe | Unix: .venv/bin/python
  // NOTE: VS Code auto-detects the venv. If detection fails, the path below is used.
  "python.defaultInterpreterPath": "${workspaceFolder}/AI/Aspire-Full.Python/python-agents/.venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/AI/Aspire-Full.Python/python-agents/.env",

  // Pylance Language Server Configuration (Microsoft's official Python language server)
  // NOTE: typeCheckingMode and diagnosticSeverityOverrides are configured in pyrightconfig.json
  "python.languageServer": "Pylance",
  "python.analysis.languageServerMode": "full",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.indexing": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,

  // Disable third-party linters (use Microsoft tooling only)
  "pylint.enabled": false,
  "flake8.enabled": false,

  // Python Formatting - Microsoft Black Formatter extension
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.pylance": "explicit"
    }
  },

  // CMake Configuration - Uses system cmake (installed in DevContainer)
  "cmake.sourceDirectory": "${workspaceFolder}/AI/Aspire-Full.Tensor/Native",
  "cmake.buildDirectory": "${workspaceFolder}/AI/Aspire-Full.Tensor/Native/build",
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,

  // NVIDIA Tools - Auto-detected from PATH in container
  "nsight.server.connection.port": 4500,
  "nsight.server.connection.host": "localhost",

  // GitHub Copilot
  "github.copilot.chat.codeGeneration.useReferencedFiles": true,
  "github.copilot.chat.codesearch.enabled": true,

  // Spell Checker
  "cSpell.words": [
    "ackages",
    "addini",
    "addopts",
    "appsettings",
    "ASPNETCORE",
    "asyncio",
    "asyncpg",
    "AUTHMODE",
    "autotuning",
    "Blazor",
    "ccache",
    "CERTDIR",
    "chelnak",
    "compileall",
    "coveragexml",
    "CUBLAS",
    "CUDA",
    "cudnn",
    "dapr",
    "DCMAKE",
    "devcontainer",
    "Dind",
    "docstates",
    "dotenv",
    "dpkg",
    "Dunder",
    "dylib",
    "ehthumbs",
    "fastapi",
    "githubcli",
    "globaljson",
    "grpcio",
    "httpx",
    "huggingface",
    "Instrumentor",
    "keyrings",
    "libgomp",
    "libportaudio",
    "libsndfile",
    "llms",
    "matmul",
    "MAXSIZE",
    "mypy",
    "nektos",
    "NVML",
    "NVSMI",
    "onnx",
    "pgvector",
    "pycache",
    "pylance",
    "pylint",
    "pyright",
    "pytest",
    "qdrant",
    "relu",
    "seachicken",
    "Serilog",
    "softmax",
    "tensorcore",
    "triaging",
    "venv",
    "xmldoc"
  ]
}
