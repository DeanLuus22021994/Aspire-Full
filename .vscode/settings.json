{
  // =============================================================================
  // Aspire-Full VS Code Settings - Fully Portable
  // No host dependencies - all paths relative to ${workspaceFolder}
  // =============================================================================

  // .NET Configuration
  "dotnet.defaultSolution": "Aspire-Full.slnx",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "omnisharp.enableRoslynAnalyzers": true,

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // File Exclusions
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/artifacts": true,
    "**/.git": true,
    "**/node_modules": true
  },
  "files.associations": {
    ".pycodestyle": "ini",
    "*.cu": "cuda-cpp",
    "*.cuh": "cuda-cpp"
  },

  // Python Configuration - Portable paths (cross-platform)
  // Windows: .venv/Scripts/python.exe | Unix: .venv/bin/python
  // VS Code auto-detects the correct path based on the .venv structure
  "python.defaultInterpreterPath": "${workspaceFolder}/AI/Aspire-Full.Python/python-agents/.venv/Scripts/python.exe",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedImport": "warning",
    "reportUnusedVariable": "warning",
    "reportUnusedParameter": "none",
    "reportMissingParameterType": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownParameterType": "none",
    "reportUnknownVariableType": "none",
    "reportUnknownArgumentType": "none",
    "reportUnnecessaryTypeIgnoreComment": "none",
    "reportPrivateUsage": "none"
  },
  "pylint.enabled": false,
  "flake8.enabled": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  // CMake Configuration - Uses system cmake (installed in DevContainer)
  "cmake.sourceDirectory": "${workspaceFolder}/AI/Aspire-Full.Tensor/Native",
  "cmake.buildDirectory": "${workspaceFolder}/AI/Aspire-Full.Tensor/Native/build",
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,

  // NVIDIA Tools - Auto-detected from PATH in container
  "nsight.server.connection.port": 4500,
  "nsight.server.connection.host": "localhost",

  // GitHub Copilot
  "github.copilot.chat.codeGeneration.useReferencedFiles": true,
  "github.copilot.chat.codesearch.enabled": true,

  // Spell Checker
  "cSpell.words": [
    "ackages",
    "addopts",
    "appsettings",
    "ASPNETCORE",
    "AUTHMODE",
    "Blazor",
    "CERTDIR",
    "chelnak",
    "coveragexml",
    "CUDA",
    "devcontainer",
    "Dind",
    "docstates",
    "dylib",
    "ehthumbs",
    "Instrumentor",
    "llms",
    "matmul",
    "mypy",
    "nektos",
    "NVML",
    "NVSMI",
    "onnx",
    "pgvector",
    "pycache",
    "pylint",
    "pytest",
    "qdrant",
    "relu",
    "seachicken",
    "Serilog",
    "softmax",
    "tensorcore",
    "triaging",
    "venv",
    "xmldoc"
  ]
}
