{
  "dotnet.defaultSolution": "Aspire-Full.slnf",
  "omnisharp.enableRoslynAnalyzers": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.exclude": {
    "**/bin": true,
    "**/obj": true
  },
  "python.linting.ignorePatterns": [
    ".vscode",
    ".vscode/**",
    ".vscode-test",
    ".vscode-test/**",
    ".vscode-*",
    ".vscode-*/**"
  ],
  "python.linting.pylintPath": "${workspaceFolder}/tools/python-lint/pylint_wrapper.py",
  "pylint.path": "${workspaceFolder}/tools/python-lint/pylint_wrapper.py",
  "github.copilot.chat.codeGeneration.useReferencedFiles": true,
  "github.copilot.chat.codesearch.enabled": true,
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true
}
