<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <add key="dotnet10" value="https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet10/nuget/v3/index.json" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="dotnet10">
      <package pattern="Microsoft.*" />
      <package pattern="System.*" />
      <package pattern="Aspire.*" />
    </packageSource>
    <packageSource key="nuget.org">
      <package pattern="Microsoft.Build.*" />
      <package pattern="Microsoft.VisualStudio.*" />
      <package pattern="Microsoft.Extensions.VectorData.Abstractions" />
      <package pattern="Microsoft.ML.*" />
      <package pattern="System.IO.Abstractions" />
      <package pattern="TestableIO.*" />
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
  <!-- Parallel restore optimization -->
  <config>
    <!-- Maximize concurrent downloads per source -->
    <add key="maxHttpRequestsPerSource" value="16" />
    <!-- Enable HTTP/2 for faster package downloads -->
    <add key="http2" value="true" />
    <!-- Signature validation disabled for community packages -->
    <add key="signatureValidationMode" value="accept" />
  </config>
</configuration>
