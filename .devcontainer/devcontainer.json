{
  "name": "Aspire Full - .NET 10 + Docker",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.dotnet-interactive-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "dotnet.defaultSolution": "Aspire-Full.slnx",
        "omnisharp.enableRoslynAnalyzers": true,
        "omnisharp.enableImportCompletion": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/bin": true,
          "**/obj": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },

  "forwardPorts": [18888, 18889, 5000, 5001, 5173, 5174],
  "portsAttributes": {
    "18888": {
      "label": "Aspire Dashboard",
      "onAutoForward": "notify"
    },
    "18889": {
      "label": "OTLP Endpoint",
      "onAutoForward": "silent"
    },
    "5000": {
      "label": "HTTP",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "HTTPS",
      "protocol": "https",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash /workspace/.devcontainer/scripts/post-create.sh",
  "postStartCommand": "bash /workspace/.devcontainer/scripts/post-start.sh",

  "remoteEnv": {
    "DOTNET_DASHBOARD_OTLP_ENDPOINT_URL": "http://aspire-dashboard:18889",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://aspire-dashboard:18889",
    "DOCKER_HOST": "tcp://docker:2376",
    "DOCKER_TLS_VERIFY": "1",
    "DOCKER_CERT_PATH": "/certs/client"
  },

  "containerEnv": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "DOTNET_NOLOGO": "1"
  }
}
